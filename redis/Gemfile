# frozen_string_literal: true

{
  'connection_pool' => ['~> 2.0'],
  'hiredis'         => ['~> 0.6'],
  'redis'           => ['~> 4.0'],
  'redis-namespace' => ['~> 1.6']
}.each do |gem_name, requirements_and_options|
  unless dependencies.any? { |dependency| dependency.name == gem_name }
    gem gem_name, *requirements_and_options
  end
end

group :test do
  {
    'mock_redis' => ['~> 0.30']
  }.each do |gem_name, requirements_and_options|
    unless dependencies.any? { |dependency| dependency.name == gem_name }
      gem gem_name, *requirements_and_options
    end
  end
end
